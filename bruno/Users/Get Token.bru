meta {
  name: Get Token
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/users/tokens
  body: json
  auth: none
}

body:json {
  {
    "email": "{{userEmail}}",
    "password": "{{userPassword}}"
  }
}

script:post-response {
  // Save the JWT token to the environment so subsequent requests can use it
  if (res.status === 200 && res.body.token) {
    bru.setEnvVar("token", res.body.token);
  }
}
