meta {
  name: Get Token
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/users/tokens
  body: json
  auth: none
}

body:json {
  {
    "email": "test@example.com",
    "password": "password123"
  }
}

script:post-response {
  if (res.status === 200 && res.body.token) {
    bru.setEnvVar("token", res.body.token);
  }
}
